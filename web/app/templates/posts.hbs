<div class="container">
  {{!-- <h1 class="text-center mb-4">Posts</h1> --}}
  <div class="row">
    {{#each @model as |post|}}
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm position-relative">

          <div class="card-body">
            <h5 class="card-title">
              <LinkTo @route="post" @model={{post.id}} >
                {{post.title}}
              </LinkTo>
            </h5>
            <p>{{format-date post.updated_at}}</p>
            <p class="card-text">
              <LinkTo @route="post" @model={{post.id}} >
                {{post.content}}
              </LinkTo>
            </p>
            <LinkTo @route="edit-post" @model={{post.id}} class="btn btn-warning ">
              <i class="bi bi-pencil-square"></i>
            </LinkTo>
            <button
              class="btn btn-danger"
              title="Excluir Post" type="button" {{on "click" (fn this.deletePost post)}}
            >
            <i class="bi bi-trash3-fill"></i>
          </button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>